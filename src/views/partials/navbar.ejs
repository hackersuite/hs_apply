<link rel="stylesheet" href="/css/navbar.css">
<div class="sidebar" data-color="azure" data-background-color="black" data-image="/img/sidebar.jpg">
  <div class="logo">
    <a href="http://greatunihack.com" class="simple-text logo-normal">
      Applications
    </a>
  </div>
  <div class="sidebar-wrapper">
    <ul class="nav">
      <% if (locals._locals.authLevel >= 4) { %>
        <li class="nav-item" data-nav="group">
          <a class="nav-link" data-toggle="collapse" href="#adminCollapse" aria-expanded="false" aria-controls="#adminCollapse">
            <i class="material-icons">lock</i>
            <p>Admin<b class="caret"></b></p>
          </a>
          <div class="collapse" id="adminCollapse">
            <ul class="nav">
              <% if (locals._locals.authLevel == 4) { %>
              <li id="admin-overview" class="nav-item">
                <a class="nav-link" href="/admin/overview">
                  <p> Overview </p>
                </a>
              </li>
              <% } %>
              <li id="admin-manage" class="nav-item">
                <a class="nav-link" href="/admin/manage">
                  <p>Manage</p>
                </a>
              </li>
            </ul>
          </div>
        </li>
      <% } %>

      <% if (locals._locals.authLevel >= 3) { %>
        <li class="nav-item" data-nav="group">
          <a class="nav-link" data-toggle="collapse" href="#reviewCollapse" aria-expanded="false" aria-controls="#reviewCollapse">
            <i class="material-icons">gavel</i>
            <p>Review<b class="caret"></b></p>
          </a>
          <div class="collapse" id="reviewCollapse">
            <ul class="nav">
              <% if (locals._locals.authLevel == 4) { %>
              <li id="review-overview" class="nav-item">
                <a class="nav-link" href="/review/overview">
                  <p>Overview</p>
                </a>
              </li>
              <% } %>

              <li id="review-application" class="nav-item">
                <a class="nav-link" href="/review">
                  <p>Application</p>
                </a>
              </li>
            </ul>
          </div>
        </li>
      <% } %>

      <li id="dashboard" class="nav-item">
        <a class="nav-link" href="/">
          <i class="material-icons">dashboard</i>
          <p>Dashboard</p>
        </a>
      </li>
      <% if (locals.hasOwnProperty("hasApplied") && hasApplied === false) { %>
      <li id="apply" class="nav-item">
        <a class="nav-link" href="/apply">
          <i class="material-icons">person</i>
          <p>Application</p>
        </a>
      </li>
      <% } %>
    </ul>
  </div>
</div>
<script>
  var currentPage = "<%- locals.currentPage || null %>";
  var element = document.getElementById(currentPage)
  if (element != null) {
    element.classList.add("active");

    // Attempt to add the active class if the element is in a dropdown group
    var elementGroup = element.closest('li[data-nav="group"]');
    if (elementGroup != null) elementGroup.classList.add("active");
  }
</script>
<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-transparent navbar-absolute fixed-top " id="navigation-bar">
  <div class="container-fluid">
    <div class="navbar-wrapper">
    </div>
    <button class="navbar-toggler" type="button" data-toggle="collapse" aria-controls="navigation-index"
      aria-expanded="false" aria-label="Toggle navigation" data-target="#navigation-bar">
      <span class="sr-only">Toggle navigation</span>
      <span class="navbar-toggler-icon icon-bar"></span>
      <span class="navbar-toggler-icon icon-bar"></span>
      <span class="navbar-toggler-icon icon-bar"></span>
    </button>
    <div class="collapse navbar-collapse justify-content-end">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" href="/logout">
            <i class="fas fa-sign-out-alt fa-3x"></i>
            <p class="d-lg-none d-md-block">
              Logout
            </p>
          </a>
        </li>
      </ul>
    </div>
  </div>
</nav>
<!-- End Navbar -->