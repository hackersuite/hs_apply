<div class="form-check">
  <label class="form-check-label">
    <input
      class="form-check-input" type="checkbox"
      name="<%= question.questionName %>" <%= question.required ? "required" : "" %>>
    <%= question.questionText %>
    <span class="form-check-sign">
      <span class="check"></span>
    </span>
  </label>

  <%- question.required ? "<span class='label-req'> *</span>" : "" %>

  <% if(question.hasOwnProperty("answerLink")) { %>
    (<a href="<%- question.answerLink %>" target="_blank" rel="noopener noreferrer">View here</a>)
  <% } %>
</div>