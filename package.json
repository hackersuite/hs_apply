{
  "name": "hs-application",
  "version": "0.0.1",
  "description": "Application system for hackathons",
  "main": "app.ts",
  "engines": {
    "node": ">=9.0.0"
  },
  "scripts": {
    "build": "tsc -p .",
    "postbuild": "gulp",
    "test": "ava -c 1",
    "test:coverage": "nyc ava --concurrency=1 --timeout=2m",
    "test:watch": "DEBUG=ava:watcher ava --watch --verbose",
    "start": "ts-node src/server.ts",
    "start:watch": "node ./node_modules/nodemon/bin/nodemon.js"
  },
  "ava": {
    "verbose": true,
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "files": [
      "!test/util/**/*"
    ]
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "reporter": [
      "text",
      "lcov"
    ]
  },
  "repository": {
    "type": "GitHub",
    "url": "https://github.com/unicsmcr/hs_application/tree/master"
  },
  "keywords": [
    "hackathon",
    "application",
    "registration"
  ],
  "author": "UniCS",
  "license": "MIT",
  "dependencies": {
    "@sendgrid/mail": "^6.4.0",
    "@types/email-templates": "^6.0.0",
    "@types/express": "^4.17.1",
    "@types/express-session": "^1.15.14",
    "@types/morgan": "^1.7.37",
    "@types/multer": "^1.3.9",
    "@types/passport": "^1.0.1",
    "@types/reflect-metadata": "^0.1.0",
    "@types/request-promise-native": "^1.0.16",
    "@unicsmcr/hs_auth_client": "^1.2.0",
    "class-validator": "^0.10.0",
    "cookie-parser": "^1.4.4",
    "dotenv": "^8.1.0",
    "ejs": "^2.6.2",
    "email-templates": "^6.0.2",
    "express": "^4.17.1",
    "express-session": "^1.16.2",
    "inversify": "^5.0.1",
    "morgan": "^1.9.1",
    "multer": "^1.4.2",
    "mysql": "^2.17.1",
    "passport": "^0.4.0",
    "passport-cookie": "^1.0.6",
    "reflect-metadata": "^0.1.13",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.7",
    "typeorm": "^0.2.18",
    "typescript": "^3.5.2"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^0.1.3",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.4.0",
    "@typescript-eslint/parser": "^2.4.0",
    "ava": "^3.2.0",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-prettier": "^3.1.1",
    "gulp": "^4.0.2",
    "gulp-clean-css": "^4.2.0",
    "gulp-rename": "^1.4.0",
    "gulp-replace": "^1.0.0",
    "gulp-terser": "^1.2.0",
    "nodemon": "^1.19.1",
    "nyc": "^15.0.0",
    "prettier": "^1.18.2",
    "source-map-support": "^0.5.13",
    "supertest": "^4.0.2",
    "ts-mockito": "^2.4.2",
    "ts-node": "^8.3.0"
  }
}
